<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CircleImageView">
        <attr name="border_width" format="dimension" />
        <attr name="border_color" format="color" />
    </declare-styleable>

    <declare-styleable name="UScrollParam">
        <attr name="scroll_alpha" format="boolean"/>
        <attr name="scroll_scaleX" format="boolean"/>
        <attr name="scroll_scaleY" format="boolean"/>
        <attr name="scroll_fromBgColor" format="color"/>
        <attr name="scroll_toBgColor" format="color"/>
        <attr name="scroll_translation"/>
    </declare-styleable>

    <attr name="scroll_translation">
        <flag name="fromTop" value="0x01" />
        <flag name="fromBottom" value="0x02" />
        <flag name="fromLeft" value="0x04" />
        <flag name="fromRight" value="0x08" />
    </attr>

    <declare-styleable name="FilterView">
        <attr name="flag" format="integer"/>
    </declare-styleable>

    <declare-styleable name="CountDownView">
        <attr name="textSize" format="dimension"/>
        <attr name="textColor" format="color"/>
        <attr name="textPadding" format="dimension"/>
        <attr name="backgroundColor" format="color"/>
        <attr name="colonLeftPadding" format="dimension"/>
        <attr name="colonRightPadding" format="dimension"/>
        <attr name="rectStrokeSize" format="dimension"/>
        <attr name="rectRadiusSize" format="dimension"/>
        <attr name="rectColor" format="color"/>
    </declare-styleable>
    
    <declare-styleable name="PasswordView">
        <attr name="dotColor" format="color"/>
        <attr name="dotRaduis" format="dimension"/>
        <attr name="lineColor" format="color"/>
        <attr name="lineStroke" format="dimension"/>
        <attr name="rectWidth" format="dimension"/>
        <attr name="rectRx" format="dimension"/>
        <attr name="length" format="integer"/>
    </declare-styleable>

</resources>