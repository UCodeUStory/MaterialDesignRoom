<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.qiyue.materialdesignadvance.demo.paint.ShaderActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tv_describle"
            android:layout_width="match_parent"
            android:textSize="25sp"
            android:textColor="#f93a00"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content" />
        <com.example.qiyue.materialdesignadvance.demo.paint.BitmapShaderView
            android:layout_width="200dp"
            android:layout_height="200dp" />
        <TextView
            android:id="@+id/tv_describle_2"
            android:layout_width="match_parent"
            android:textSize="25sp"
            android:textColor="#f93a00"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content" />
        <com.example.qiyue.materialdesignadvance.demo.paint.CircleImageView
            android:layout_width="200dp"
            android:src="@drawable/test_circle"
            android:layout_height="200dp" />
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
