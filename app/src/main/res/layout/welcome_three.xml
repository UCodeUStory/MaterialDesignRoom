<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal" >

        <FrameLayout
                android:id="@+id/bg_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/imageView0_2"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/pg2_2" />
            <ImageView
                android:id="@+id/imageView0"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/pg2_1" />
        </FrameLayout>

        <com.example.qiyue.materialdesignadvance.demo.parallelviewpager.MyScrollView
            android:id="@+id/mscv"
            android:layout_width="146dp"
            android:layout_height="262dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:scrollbars="none" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent" 
                android:gravity="left"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/pg1_content1"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:scaleType="fitStart"
                    android:src="@drawable/weixin" />

            </LinearLayout>
        </com.example.qiyue.materialdesignadvance.demo.parallelviewpager.MyScrollView>

        <ImageView
            android:id="@+id/iv_phone_bg"
            android:layout_width="210dp"
            android:layout_height="300dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/phone1" />

</RelativeLayout>